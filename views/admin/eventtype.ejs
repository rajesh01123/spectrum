        <div class="row">
            <div class="fully-tables">
                <div class="cards-headers">
                   <h4> Add Event Type </h4>
                </div>

                <form action="/admin/addmatch" method="post">
                    <div class="form-group row">
                        <div class="form-group add-admin col-md-4">
                            <label class="control-label" for="name">Event Name</label>
                            <input type="text" name="name" class="form-control required" placeholder="Enter the name (e.g. Ludo,Table Tennis)" required>
                        </div>
                        <div class="form-group add-admin col-md-4">
                            <label class="control-label" for="name">Event Phase</label>
                            <input type="text" name="name" class="form-control required" placeholder="Enter the name" required>
                        </div>
                        <div class="form-group add-admin col-md-4">
                            <label class="control-label" for="name">Event Category</label>
                            <select name="user" class="form-control">
                                <option value="">Select your category</option>
                                <option value="AA">-Able abilities (AA)</option>
                                <option value="AS">-Special Abilities (AS)</option>
                                <option value="AASA">-Able Abilities + Special Abilities (AASA)</option>
                            </select>
                        </div>
                        <div class="form-group add-admin col-md-12">
                            <label for="eventDescription" class="form-label">Special Notes</label>
                            <textarea class="form-control" id="summernote" name="eventDescription" rows="4" placeholder="Enter additional notes about the event" required></textarea>
                        </div>
                        <div class="form-group  add-admin mt-3 col-md-12" style="margin-bottom: 0px;">
                            <input type="submit" name="add_user" class="btn btn-success" value="Save" style="width: 12%;"> 
                        </div> 
                    </div>  
                </form>
            
            </div>
        </div>

